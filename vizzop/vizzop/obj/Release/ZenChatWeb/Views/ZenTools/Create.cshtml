@model Zentralized.Models.NewZenToolsAccount
@{
    ViewBag.Title = "Create your account - Zentralized";
    Zentralized.Models.ZentralizedContext db = new Zentralized.Models.ZentralizedContext();
    /*
    var ServiceTypes = from m in db.ServiceTypes
                       select m;
    ServiceTypes = ServiceTypes.OrderBy(m => m.ZIndex);
    ViewBag.ServiceTypes = ServiceTypes;
    */
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('#dialog').dialog({
            autoOpen: false,
            width: 800,
            height: 500,
            resizable: false,
            title: 'Terms & Conditions',
            modal: true,
            open: function (event, ui) {
                $(this).load('@Url.Action("Conditions")');
            },
            buttons: {
                "OK": function () {
                    $(this).dialog("close");
                }
            }
        });

        $('#show-terms').click(function () {
            $('#dialog').dialog('open');
        });
    });
</script>
<center>
    <br />
    <h3>
        Create your account
        </h3>
    <br />
    @using (Html.BeginForm("Create", "ZenTools", FormMethod.Post, new { @class = "well form-horizontal", @style = "width: 700px;" }))
    {
        @Html.ValidationSummary(true)
        if (ViewBag.errors != null)
        {
        <div class="alert">
            <a class="close" data-dismiss="alert">×</a>
            @Html.Raw(ViewBag.errors)
        </div>
        }
        <!-- style=" background-image: url(@Url.Content("~/Content/images/details.png")); background-position: right top; background-repeat: no-repeat;" -->
        <fieldset>
            <legend>Required information for ZenTools account</legend>
            <div class="control-group">
                @Html.LabelFor(model => model.BusinessName, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.BusinessName, new { @class = "input-medium" })
                    @Html.ValidationMessageFor(model => model.BusinessName, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.ServiceType, new { @class = "control-label" })
                <div class="controls">
                    @Html.DropDownListFor(model => model.ServiceType, new SelectList(ViewBag.ServiceTypes, "CartName", "Name", Model.ServiceType))
                    @Html.ValidationMessageFor(model => model.ServiceType, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.Domain, new { @class = "control-label" })
                <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(model => model.Domain, new { @class = "input-medium" })
                    @Html.ValidationMessageFor(model => model.Domain, null, new { @class = "help-inline" })
                </div>
                    <span class="help-block">
                        <span class="label label-info">Note</span>
                        <span style="vertical-align: middle;">Your customer support agents will log in using username@domain</span></span>
                        </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    @Html.EditorFor(model => model.AcceptTerms)
                    <label for="AcceptTerms" class="nostyle" style="width: auto; display: inline; vertical-align: middle;">
                        I accept the </label>
                    <a id="show-terms" class="nostyle" style="width: auto; display: inline; cursor: pointer; vertical-align: middle;">Terms & Conditions</a>
                    @Html.ValidationMessageFor(model => model.AcceptTerms, null, new { @class = "help-inline" })
                </div>
            </div>
            <br />
            <legend>Required information for administrator account</legend>
            <div class="control-group">
                @Html.LabelFor(model => model.FullName, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.FullName, new { @class = "input-medium" })
                    @Html.ValidationMessageFor(model => model.FullName, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.Email, new { @class = "input-large" })
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
                <div class="controls">
                    <div class="input-append">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "input-medium" })
                        @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "help-inline" })
                    </div>
                    <span class="help-block">
                        <span class="label label-info">Note</span>
                        <span style="vertical-align: middle;">Choose the username for the administrator account.<br />You will log in using username@domain</span></span>
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.Password, new { @class = "input-small" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.ConfirmPassword, new { @class = "input-small" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "help-inline" })
                </div>
            </div>
            <div id="dialog"></div>
            <div class="form-actions" style="margin-bottom: 0;">
                <input type="submit" value="Create Account" class="btn btn-success btn-large" />
            </div>
        </fieldset>
    }
</center>
