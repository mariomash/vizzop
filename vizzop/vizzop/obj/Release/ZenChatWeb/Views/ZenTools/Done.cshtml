<script type="text/javascript">
    var seconds = new Number(5);
    $("#seconds").text(seconds);
    function ChangeRedir() {
        if (seconds > 0) {
            $("#seconds").text(seconds);
            seconds--;
            setTimeout(ChangeRedir, 1000);
            return;
        }
        window.location = '@Url.Action("Index", "Panel")'; //  + '#quickstart';
    }
    $(function () {
        setTimeout(ChangeRedir, 1000);
    });
</script>
