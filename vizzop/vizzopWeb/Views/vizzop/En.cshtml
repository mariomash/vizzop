@{
    ViewBag.Title = "vizzop - Customer Support & Analytics SAAS";
}
<style>
    body, html {
        background-color: #fff;
    }
</style>
<div style="position: relative; padding: 15px 0;">
    <div style="text-align: center; white-space: nowrap;">
        <img src="@Url.Content("~/Content/images/logo.png")" style="width: 300px; margin: 10px 50px 0 0; display: inline-block; vertical-align: middle;" alt="vizzop"/>
        <!---->
        <div style="display: inline-block; vertical-align: middle; margin: 20px 30px 0 90px; text-align: center;">
            <a  href="@Url.Action("Versions", "vizzop")" class="btn btn-primary btn-large" style="box-shadow: 0 0 9px orange; text-shadow: none;">
                <div style="font-size: 24px;">Sign up</div>
                <div style="font-weight: normal; font-size: 12px; margin-top: 10px;">beta accounts available</div>
            </a>
        </div>

    </div>
</div>


<div style="background-image: url(@Url.Content("~/Content/images/bg_base.jpg")); background-position: center center; background-repeat: no-repeat; background-size: cover; padding: 15px; box-shadow: inset 0px 0px 5px 0px #232323;">
    <div style="background-color: rgb(51, 51, 51); padding: 15px; border-radius: 10px; width: 700px; margin: 20px auto 40px; color: white; opacity: 0.9; box-shadow: 0px 0px 5px rgb(238, 238, 238);">
        <h2 style="text-align: center; width: 700px; margin: 0 auto;">Customer support with co-browsing & chat</h2>
        <h3 style="text-align: center; width: 700px; margin: 0 auto;">Leap the gap and increase conversion rates</h3>
    </div>
    <img src="@Url.Content("~/Content/images/feature1.png")" style="width: 900px; margin: 0 auto 20px; display: block;" alt="vizzop"/>
</div>

<div style="padding: 20px 0 20px; background-color: #fafafa; border-bottom: solid 1px #ccc; -webkit-box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.075) !important; -moz-box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.075) !important; box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.075) !important;">
    <div style="width: 960px; margin: 0 auto;">
        <div class="span4" style="margin-left: 40px;">
            <h3>What is vizzop?</h3>
            <p><strong>Vizzop is the definitive way of monitoring your clients and helping them!</strong></p>
            <p>Vizzop is an easy to install javascript plugin for your website, it will allow you to see in realtime what your clients see and do in your own website, and also chat with them.</p>
            <p>It also provides you with a ticket system, FAQ system, stats etc.</p>
        </div>
        <div class="span7" style="margin-left: 80px;">
            <iframe width="480" height="360" src="//www.youtube.com/embed/Tz3Rlra5qgQ" frameborder="0" allowfullscreen style="border: solid 5px #000; box-shadow: 0px 0px 5px #333; display: block; margin: 20px auto;"></iframe>
        </div>
        <div style="clear: both;"></div>
        <!--
        <img src="@Url.Content("~/Content/images/feature2_en.png")" style="width: 900px; margin: 0 auto; display: block;" alt="vizzop"/>
            -->
    </div>
</div>
